{
  "name": "diet-assistant",
  "version": "1.1.0",
  "private": true,
  "main": "build/main.js",
  "scripts": {
    "serve-renderer": "vue-cli-service serve",
    "build-renderer": "vue-cli-service build",
    "test-unit": "vue-cli-service test:unit",
    "lint": "vue-cli-service lint",
    "build-electron": "NODE_ENV=\"production\" webpack --config webpack.electron.js",
    "watch-electron": "webpack --config webpack.electron.js -w",
    "serve-electron": "electron ./build/main.js",
    "build-windows": "electron-builder -w",
    "build-macos": "electron-builder -m",
    "postinstall": "electron-builder install-app-deps",
    "semantic-release": "semantic-release --no-ci"
  },
  "build": {
    "productName": "Diet Assistant",
    "appId": "pz.dietAssitant",
    "win": {
      "target": [
        "portable"
      ]
    },
    "files": [
      "build/",
      "package.json"
    ],
    "portable": {
      "artifactName": "diet_assistant.exe"
    },
    "directories": {
      "output": "electron/output"
    }
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "master",
      "next",
      {
        "name": "alpha",
        "prerelease": true
      },
      {
        "name": "beta",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "docs/CHANGELOG.md"
        }
      ],
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "echo APP_VERSION=\"${nextRelease.version}\" > electron-builder.env && npm run build-windows"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "docs/CHANGELOG.md",
            "package.json",
            "package-lock.json"
          ]
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "electron/output/diet_assistant.exe",
              "label": "Windows Build"
            }
          ]
        }
      ]
    ]
  },
  "dependencies": {
    "@types/lodash.debounce": "^4.0.6",
    "core-js": "^3.6.5",
    "date-fns": "^2.16.1",
    "downloadjs": "^1.4.7",
    "electron-debug": "^3.1.0",
    "electron-is-dev": "^1.2.0",
    "electron-store": "^6.0.0",
    "html2canvas": "^1.0.0-rc.7",
    "jspdf": "^2.1.1",
    "lodash.debounce": "^4.0.8",
    "pdf-parse": "^1.1.1",
    "register-service-worker": "^1.7.1",
    "uuid": "^8.3.0",
    "vue": "^3.0.0-0",
    "vue-class-component": "^8.0.0-0",
    "vue-router": "^4.0.0-0",
    "webpack-node-externals": "^2.5.2"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.0.7",
    "@semantic-release/npm": "^7.0.5",
    "@types/downloadjs": "^1.4.2",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/jest": "^24.0.19",
    "@types/pdf-parse": "^1.1.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-pwa": "~4.5.0",
    "@vue/cli-plugin-router": "~4.5.0",
    "@vue/cli-plugin-typescript": "~4.5.0",
    "@vue/cli-plugin-unit-jest": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/compiler-sfc": "^3.0.0-0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^5.0.2",
    "@vue/test-utils": "^2.0.0-0",
    "electron": "^10.1.2",
    "electron-builder": "^22.8.1",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-vue": "^7.0.0-0",
    "prettier": "^1.19.1",
    "sass": "^1.26.11",
    "sass-loader": "^10.0.2",
    "semantic-release": "17.1.2",
    "ts-loader": "^8.0.4",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "~3.9.3",
    "vue-jest": "^5.0.0-0",
    "webpack-cli": "^3.3.12"
  }
}
