{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "build-electron",
    "baseUrl": ".",
    "importHelpers": false,
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/main/*.ts",
    "src/typings/*.ts",
    "src/shared/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
